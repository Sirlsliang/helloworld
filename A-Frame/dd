    <script src="/static/js/isvr-menu-thumb.js"></script> -->
    <script>
      AFRAME.registerComponent('sphereLayout',{

        schema:{
          radius:{
            default:10,
            type:'int',
          },
          param:{
            default:500,
            type:'int',
          },
        },                

        init:function(){
          var self = this;
          var el  =this.el;
          //为对象添加一个children属性
          this.children = el.getChildEntities();
          initThePosition(this);
        
        },

        //初始化每个项目的位置
        initThePosition:function(evt){
          var radius = this.data.radius;
          for(var i=0;i<children.length;i++){
            var a,b;
            var k = (2*(i+1)-1)/this.children.length-1;
            var a = Math.acos(k);
            var b = a * Math.sqrt(this.children.length * Math.PI);
        
        
            var x = radius * Math.sin(a) * Math.cos(b);
            var y = radius * Math.sin(a) * Math.sin(b);
            var z = radius * Math.cos(a);
